{
  "compilerOptions": {
    "target": "ES2020",             
    "module": "commonjs",            
    "moduleResolution": "node",
    "esModuleInterop": true,         
    "skipLibCheck": true,
    "strict": true,                  
    "outDir": "./dist", 
    "rootDir": "./src",             
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "express"],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
