{
  "compilerOptions": {
    "target": "ES2020",             
    "module": "commonjs",            
    "moduleResolution": "node",
    "esModuleInterop": true,         
    "skipLibCheck": true,
    "strict": true,                  
    "outDir": "./dist",              
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ]
}
